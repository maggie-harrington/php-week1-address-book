<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <link href="css/styles.css" rel="stylesheet" type="text/css">
        <title>Address Book</title>
    </head>
    <body>
        <div class='container'>
            <h1>Address Book</h1>

            {% if list_of_contacts is not empty %}
                <h3>Contacts:</h3>
                <ul>
                {% for contact in list_of_contacts %}
                    <li>{{ contact.getName }}</li>
                    <li>{{ contact.getPhone }}</li>
                    <li>{{ contact.getEmail }}</li>
                    <li>{{ contact.getAddress }}</li>
                    <br>
                {% endfor %}
                </ul>

                <form action='/delete_contacts' method='post' id="delete_contacts">
                    <button type='submit' class='btn btn-danger btn-sm active'>Delete All Contacts</button>
                </form>
                <br>
            {% endif %}

            <h3>Add a contact:</h3>
            <br>

            <form action='/create_contact' method='post' id="contact_form">
                <input id='name' name='name' type='text' placeholder=' name'>
                <br><br>

                <input id='phone' name='phone' type='text' placeholder=' phone'>
                <br><br>

                <input id='email' name='email' type='text' placeholder=' email'>
                <br><br>

                <input id='address' name='address' type='text' placeholder=' address'>
                <br><br>

                <button type='submit' class='btn btn-primary btn-lg active'>Add Contact</button>
            </form>

        </div>
    </body>
</html>
